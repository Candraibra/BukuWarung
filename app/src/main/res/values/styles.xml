<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorFontSub</item>
        <item name="android:windowBackground">@color/bg_grey</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Widget.BottomNavigationViewInactive" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">12sp</item>
    </style>

</resources>